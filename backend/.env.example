# Pica Server configuration
# Copy to .env and edit values.

# Bind address (default: 0.0.0.0)
PICA_BIND=0.0.0.0

# Port (default: 8080)
PICA_PORT=8080

# Storage directory (default: ./storage)
# Use absolute path on Windows if you want.
PICA_STORAGE=./storage

# Optional API Key (if set, App must send X-Api-Key)
# PICA_API_KEY=change_me

